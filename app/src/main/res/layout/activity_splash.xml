<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.sdsmdg.cognizance2017.activities.SplashActivity">


    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp">

        <ImageView
            android:id="@+id/outer_circle"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/outer_cir" />

        <ImageView
            android:id="@+id/inner_circle"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/inner_cir" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="176dp"
            android:layout_height="176dp"
            app:srcCompat="@drawable/logo_two"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/cogni_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/cogni_splash" />

</RelativeLayout>
