<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:clipToPadding="false"
    tools:context="com.sdsmdg.cognizance2017.activities.AboutUs">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/about_top_bar"
                android:layout_width="match_parent"
                android:paddingTop="4dp"
                android:layout_height="?attr/actionBarSize"
                android:background="#111111"
                android:elevation="12dp">


                <TextView
                    android:id="@+id/about_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="ABOUT"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/about_mdg_logo"
                android:layout_below="@id/about_top_bar"
                android:layout_marginTop="48dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_two" />
            <TextView
                android:id="@+id/about_music_dna_title"
                android:layout_below="@id/about_mdg_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Cognizance'17"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/about_version_text"
                android:layout_below="@id/about_music_dna_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="Version 1.0"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/about_brought_by"
                android:layout_below="@id/about_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="48dp"
                android:text="developed by"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="#fff"/>

            <ImageView
                android:id="@+id/about_music_dna_logo"
                android:layout_below="@id/about_brought_by"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                />


            <TextView
                android:id="@+id/about_text"
                android:layout_below="@id/about_music_dna_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/mdg_description"
                android:textAlignment="center"
                android:textColor="#CCC"
                android:textSize="13dp" />


            <ImageView
                android:id="@+id/about_website_link"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_website"
                android:layout_below="@+id/about_text"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/about_page_centering_view"
                android:padding="2dp"
                />
            <View
                android:id="@+id/about_page_centering_view"
                android:layout_below="@id/about_text"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/about_facebook_link"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/about_text"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/about_page_centering_view"
                android:padding="8dp"
                android:textSize="30sp"
                android:src="@drawable/ic_facebook_image_exp"
                />

            <TextView
                android:id="@+id/about_license_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="visit website"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:autoLink="web"
                android:clickable="true"
                android:layout_below="@+id/about_facebook_link"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>