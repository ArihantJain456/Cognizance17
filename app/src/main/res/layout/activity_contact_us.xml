<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.sdsmdg.cognizance2017.activities.ContactUsActivity">

    <TextView
        android:id="@+id/contact_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="@string/contact_us"
        android:textColor="@color/colorPrimarySelected"
        android:textSize="30sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_below="@+id/contact_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:background="@color/colorPrimarySelected" />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/number_two"
        android:layout_toStartOf="@+id/number_one"
        android:padding="4dp"
        android:src="@drawable/phone" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_toStartOf="@+id/number_two"
        android:padding="4dp"
        android:src="@drawable/phone" />

    <LinearLayout
        android:id="@+id/linear_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/office_location"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/email_icon" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center"
            android:text="info@cognizance.org.in"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/office_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="Cognizance Office,\n3rd Floor, Multi Activity Center\nIIT Roorkee, Roorkee- 247667\nHaridwar, Uttarakhand
"
        android:textColor="@color/colorPrimary" />



    <TextView
        android:id="@+id/number_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_one"
        android:layout_centerHorizontal="true"
        android:autoLink="phone"
        android:padding="8dp"
        android:text="+91-95 57 917981"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary" />

    <TextView
        android:id="@+id/number_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_one"
        android:layout_centerHorizontal="true"
        android:autoLink="phone"
        android:padding="8dp"
        android:text="+91-84 39 912023"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary" />

</RelativeLayout>
